@using Sicemed.Web.Models
@{
    var usuario = User as Persona;
}
@if (User.Identity.IsAuthenticated)
{
    <text>Bienvenido <strong>@usuario.Apellido, @usuario.Nombre</strong>!
        [ @Html.ActionLink("Salir", "Salir", "Cuenta", new {Area = ""}, new {}) ]</text>
} else
{
    @:[ @Html.ActionLink("Iniciar Sesión", "IniciarSesion", "Cuenta", new {Area = ""}, new {}) ]
}
