@using Sicemed.Web.Models
@model IEnumerable<Provincia>
@{
    ViewBag.Title = "Administración De Consultorios";
}
<h2>
    Administraci&oacute;n de Consultorios
</h2>

@Html.Partial("GrillaBase")

@section Scripts{
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            app.grid.initialize({
                url: {
                    edit: '@Url.Action("Editar")',
                    add: '@Url.Action("Nuevo")',
                    del: '@Url.Action("Eliminar")',
                    list: '@Url.Action("List")'
                },
                params: {
                    caption: 'Gesti&oacute;n De Localidades',
                    emptyrecords: 'No hay Localidades cargadas.',
                    colNames: ['Id', 'Nombre', 'Codigo Postal', 'Caracteristicas', 'Provincia'],
                    colModel: [
                            {
                                name: 'Id',
                                index: 'Id',
                                width: 55,
                                sortable: false,
                                hidden: true
                            },
                            {
                                name: 'Nombre',
                                index: 'Nombre',
                                width: 90,
                                editable: true,
                                sortable: false,
                                editrules: {
                                    required: true
                                },
                                formoptions: {
                                    label: 'Nombre (*)',
                                    maxlength: '255',
                                    size: '255'
                                }
                            },
                            {
                                name: 'CodigoPostal',
                                index: 'CodigoPostal',
                                width: 90,
                                editable: true,
                                sortable: false,
                                formoptions: {
                                    label: 'Codigo Postal',
                                    maxlength: '16',
                                    size: '16'
                                }
                            },
                            {
                                name: 'Caracteristicas',
                                index: 'Caracteristicas',
                                width: 300,
                                editable: true,
                                sortable: false,
                                edittype: 'textarea',
                                editoptions: {
                                    rows: '10',
                                    cols: '30'
                                },
                                formoptions: {
                                    label: 'Caracteristicas'
                                }
                            },
                            {
                                name: 'ProvinciaId',
                                index: 'Provincia',
                                width: 90,
                                editable: true,
                                sortable: false,
                                edittype: 'select',
                                editoptions: {
                                    value: {
                                        @Html.Raw(string.Join(",", Model.Select(p=> string.Format("{0}: '{1}'", p.Id, Html.Encode(p.Nombre)))))
                                    }
                                },
                                formoptions: {
                                    label: 'Provincia (*)'
                                }
                            }                        
                        ]
                }
            });
        });
    </script>
}
