@model IEnumerable<SelectListItem>

@{
    var name = ViewData.ModelMetadata.AdditionalValues.ContainsKey("DropDownProperty") 
        ? ViewData.ModelMetadata.AdditionalValues["DropDownProperty"].ToString()
        : string.Empty;
        
    if(string.IsNullOrWhiteSpace(name))
    {
        ViewData.TemplateInfo.HtmlFieldPrefix = string.Empty;
    }
}

@Html.DropDownList(name, Model, "<< Seleccione >>")