@{
    var attrs = new Dictionary<string, object>();
    attrs.Add("data-prompt", ViewData.ModelMetadata.Watermark);
    var action = ViewData.ModelMetadata.AdditionalValues["SearcheableDropDownPropertyAttribute.ActionName"].ToString();
    var controller = ViewData.ModelMetadata.AdditionalValues["SearcheableDropDownPropertyAttribute.ControllerName"].ToString();
    attrs.Add("data-url", Url.Action(action, controller));

    if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("SearcheableDropDownPropertyAttribute.Template"))
    {
        attrs.Add("data-template", ViewData.ModelMetadata.AdditionalValues["SearcheableDropDownPropertyAttribute.Template"].ToString());        
    }
    if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("SearcheableDropDownPropertyAttribute.DisplayProperty"))
    {
        attrs.Add("data-display-property", ViewData.ModelMetadata.AdditionalValues["SearcheableDropDownPropertyAttribute.DisplayProperty"].ToString());
    }
    attrs.Add("class", "searcheable");        
}
@Html.HiddenFor(x => x, attrs)
