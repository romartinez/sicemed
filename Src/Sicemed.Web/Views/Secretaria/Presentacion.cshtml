@model Sicemed.Web.Models.ViewModels.Secretaria.TurnosDelDiaViewModel

@section Css
{
    <style type="text/css">
        .pacientes {
            padding: 10px;
        }

        ol.turnos {
            margin: 0;
        }
        ol.turnos li
        {
            list-style-type: none;
        }
        
        ol.turnos li.presentado span {
            color: #2e8f19;
        }
        
        ol.turnos li.atendido{
            text-decoration: line-through;
        }
    </style>
}   
@{
    ViewBag.Title = "Presentación De Turnos";
}

<h2>Turnos del d&iacute;a - <span class="title_pink">@DateTime.Now.ToShortDateString()</span></h2>

<div>
    <a class="button_link btn_blue" href="@Url.Action("Presentacion")"><span>Actualizar</span></a>            
</div>

@if (Model.ProfesionalesConTurnos.Any())
{
    <div class="ctl-accordion">
        @foreach (var profesional in Model.ProfesionalesConTurnos)
        {
            <h3><a href="#">@profesional.PersonaNombreCompleto</a></h3>
            <div>
                <div class="ui-state-highlight pacientes">
                    Le restan @profesional.PacientesPendientes pacientes por atenderse.
                    Y @profesional.TurnosPendientes pendientes de presentarse.
                </div>
                <ol class="turnos">
                    @foreach (var turno in profesional.Turnos)
                    {
                        @Html.DisplayFor(m => turno)
                    }
                </ol>
            </div>        
        }
    </div>    
}
else
{
    <div class="ui-state-highlight">
        No hay turnos otorgados para el d&iacute; de la fecha.
    </div>
}