@model Sicemed.Web.Models.ViewModels.Secretaria.AltaPacienteEditModel

@{
    ViewBag.Title = "Alta Paciente";
}

<h2>Alta Paciente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummaryWithMessage()

    @Html.EditorForModel()

    @Html.Submit("Alta")        
}

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#PlanId").change(function () {
                var op = $(this).find("option:selected").text();
                if (op=="Consulta Particular")
                {
                    $('#NumeroAfiliado').val("99999999");
                }
                else
                {
                    $('#NumeroAfiliado').val("");
                };
            });
        });
    </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#ObraSocialId").change(function () {
                    $('#NumeroAfiliado').val("");
                });
            });
    </script>
}
