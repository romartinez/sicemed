@using Sicemed.Web.Models.ViewModels.Cuenta
@model RegistroPersonaViewModel

@{
    ViewBag.Title = "Registro";
}

<h2>Crear una nueva cuenta</h2>
<p>
    Utilice el formulario para crear una nueva cuenta en Sicemed. 
</p>
<p>
    El password debe tener como m&iacute;nimo una longitud de @ViewBag.PasswordLength caracteres.
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummaryWithMessage()

    @Html.EditorForModel()

    @Html.Submit("Registrarse")        
}
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#PlanId").change(function () {
                var op = $(this).find("option:selected").text();
                if (op=="Consulta Particular")
                {
                    $('#NumeroAfiliado').val("99999999");
                }
                else
                {
                    $('#NumeroAfiliado').val("");
                };
            });
        });
    </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#ObraSocialId").change(function () {
                    $('#NumeroAfiliado').val("");
                });
            });
    </script>
}
